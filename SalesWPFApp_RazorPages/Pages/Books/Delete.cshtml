@page
@model SalesWPFApp_RazorPages.Pages.Books.DeleteModel
@{
}

<h3>Delete</h3>
<hr />
<h3>Are you sure you want to delete the book:</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.book.BookName</dd>
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Model.book.Author</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="book.BookId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>