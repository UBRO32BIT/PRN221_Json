@page
@model SalesWPFApp_RazorPages.Pages.BooksModel
@{
    ViewData["Title"] = "Categories Management";
}

<div class="row">
    <div class="col-12">
        <h2 class="text-center mt-4">Manage Books</h2>
        <div class="py-1">
            <a asp-page="./Create" class="btn btn-primary">New Book</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Book Name</th>
                    <th>Author</th>
                    <th>Publisher</th>
                    <th>Year</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Books != null && Model.Books.Any())
                {
                    @foreach (var book in Model.Books)
                    {
                        <tr>
                            <td><img src="@book.ImageUrl" alt="Book Image" style="width: 50px;" /></td>
                            <td>@book.BookName</td>
                            <td>@book.Author</td>
                            <td>@book.Publisher</td>
                            <td>@book.Year</td>
                            <td>@book.UnitPrice.ToString("C")</td>
                            <td>@book.UnitsInStock</td>
                            <td>
                                <a asp-page="./Update" asp-route-id="@book.BookId" class="btn btn-primary">Edit</a>
                                <a asp-page="./Delete" asp-route-id="@book.BookId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>
                            There are no books in this table!
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
