@page
@model SalesWPFApp_RazorPages.Pages.BooksModel
@{
    ViewData["Title"] = "Books Management";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Books Management</title>
    <script src="https://kit.fontawesome.com/f1de9b34a8.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2">
                <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="height: 100vh;">
                    <a href="AdminPage" class="d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <img src="https://ubro32bit.github.io/MyFirstWebpage/other-site/logo.png" alt="Page Logo" class="w-25">
                        <span class="fs-4 px-3">Dashboard</span>
                    </a>
                    <hr />
                    <ul class="nav nav-pills flex-column mb-auto">
                        <li class="nav-item">
                            <a href="AdminPage" class="nav-link active">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white">
                                <i class="fas fa-book"></i> Books
                            </a>
                        </li>
                        <li>
                            <a href="#" class="nav-link text-white">
                                <i class="fas fa-users"></i> Customers
                            </a>
                        </li>
                    </ul>
                    <hr />
                </div>
            </div>

            <div class="col-10">
                <h2 class="text-center mt-4">Manage Books</h2>
                <div class="py-1">
                    <a asp-page="./Create" class="btn btn-primary">New Book</a>
                </div>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Book Name</th>
                            <th>Author</th>
                            <th>Publisher</th>
                            <th>Year</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model.Books)
                        {
                            <tr>
                                <td><img src="@book.ImageUrl" alt="Book Image" style="width: 50px;" /></td>
                                <td>@book.BookName</td>
                                <td>@book.Author</td>
                                <td>@book.Publisher</td>
                                <td>@book.Year</td>
                                <td>@book.UnitPrice.ToString("C")</td>
                                <td>@book.UnitsInStock</td>
                                <td>
                                    <a asp-page="./Edit/@book.BookId" class="btn btn-primary">Edit</a>
                                    <a asp-page="./Delete/@book.BookId" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
