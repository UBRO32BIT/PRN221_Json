@page
@model SalesWPFApp_RazorPages.Categories.CategoriesModel;
@{
    ViewData["Title"] = "Categories Management";
}

<div class="row">
    <div class="col-12">
        <h2 class="text-center mt-4">Manage Categories</h2>
        <div class="py-1">
            <a asp-page="./Create" class="btn btn-primary">New Category</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category name</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Categories != null && Model.Categories.Any())
                {
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <td>@category.CategoryId</td>
                            <td>@category.Name</td>
                            <td>
                                <a asp-page="./Update" asp-route-id="@category.CategoryId" class="btn btn-primary">Edit</a>
                                <a asp-page="./Delete" asp-route-id="@category.CategoryId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>
                            There are no categories in this table!
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
